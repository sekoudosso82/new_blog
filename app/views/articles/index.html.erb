<div class="">
    <%= form_tag(articles_path, method: :get) do %>
        Search By title or body <%= text_field_tag :search, params[:search] %>
      <%= submit_tag 'Search 🔍', name: nil %>
    <% end %>
</div>
<div class="index-container">
    <%= button_to('Create New Article!', new_article_path, method: :get ) %>

    
    <%  @articles.each do |article| %>
    <div class="index-tile">
        <h2><%= link_to "more detail", article %></h2>
        <h3><%= article.title %></h3> 
        <h3><%= image_tag(article.image, class: "index-img") %></h3>  
        <h3><%= article.body %></h3> 
  
        <%= button_to "Delete Article", article_path(article), method: :delete %>
        <%= button_to "Edit Article", edit_article_path(article), method: :get %>     
        <%= link_to "Write comment", new_comment_path({:article_id => article.id}), method: :get %>

        
    </div>
    <%  end  %>
</div>